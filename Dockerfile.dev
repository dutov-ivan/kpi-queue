FROM oven/bun:1.1.6-alpine AS deps
WORKDIR /app

# Install python3, make, g++, bash for node-gyp and native builds
RUN apk add --no-cache python3 make g++ bash

COPY package.json bun.lock ./
RUN bun install

FROM oven/bun:1.1.6-alpine AS dev
WORKDIR /app

RUN apk add --no-cache python3 make g++ bash

COPY package.json bun.lock ./
RUN bun install

COPY . .

EXPOSE 3000
CMD ["bun", "run", "start:dev"]
